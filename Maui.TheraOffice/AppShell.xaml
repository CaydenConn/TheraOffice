<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.TheraOffice.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.TheraOffice"
    xmlns:views="clr-namespace:Maui.TheraOffice.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Maui.TheraOffice">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
    Title="Patients"
    ContentTemplate="{DataTemplate views:PatientMainView}"
    Route="PatientMainView" />

    <ShellContent
    Title="Physicians"
    ContentTemplate="{DataTemplate views:PhysicianMainView}"
    Route="PhysicianMainView" />
    
    <ShellContent
    Title="Appointments"
    ContentTemplate="{DataTemplate views:AppointmentMainView}"
    Route="AppointmentMainView" />

    <ShellContent
    Title="Patients"
    ContentTemplate="{DataTemplate views:PatientView}"
    Route="PatientView" />

    <ShellContent
    Title="Patients"
    ContentTemplate="{DataTemplate views:PhysicianView}"
    Route="PhysicianView" />

    <ShellContent
    Title="Appointments"
    ContentTemplate="{DataTemplate views:AppointmentView}"
    Route="AppointmentView" />

    <ShellContent
    Title="Appointments"
    ContentTemplate="{DataTemplate views:AppointmentCloseView}"
    Route="AppointmentCloseView" />
</Shell>
