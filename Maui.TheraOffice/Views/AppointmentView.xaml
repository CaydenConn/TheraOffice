<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.TheraOffice.Views.AppointmentView"
             Title="AppointmentView"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="6*"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="6*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <!-- DATE AND TIME HEADER -->
            <Grid Grid.Row="0">
                <Label
                Text="Select a Date and Time"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"
                />
            </Grid>
            <!-- DATE AND TIME SELECTION -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Text="Appointment Date"/>
                    <DatePicker Grid.Row="1"  Date="{Binding StartDate}"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Text="Appointment Time"/>
                    <TimePicker Grid.Row="1"  Time="{Binding StartTime}"/>
                </Grid>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Text="Appointment End Time"/>
                    <TimePicker Grid.Row="1"  Time="{Binding EndTime}"/>
                </Grid>

            </Grid>
            <!-- PATIENT HEADER -->
            <Grid Grid.Row="2">
                <Label
                Text="Select a Patient"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"
                />
            </Grid>
            <!-- PATIENT SEARCH BAR -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.735*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Text="Patient"/>

                <Button Grid.Column="0" Grid.Row="1" Text="{Binding SortSearchTypePatient}" Clicked="SortTypeClickedPatient"/>
                <Button Grid.Column="1" Grid.Row="1" Text="{Binding SortSearchIconPatient}" Clicked="SortSearchClickedPatient"/>
                <Entry Grid.Column="2" Grid.Row="1" Text="{Binding QueryPatient}"/>
                <Button Text="Search" Grid.Row="1" Grid.Column="3" Clicked="SearchClickedPatient"/>
            </Grid>
            <!-- Patient LIST -->
            <Grid Grid.Row="4">
                <ListView
                ItemsSource="{Binding Patients}"
                SelectedItem="{Binding SelectedPatient}"
                HasUnevenRows="False"
>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="{Binding Model.Display}" Background="{Binding DisplayBackgroundColor}"  Grid.Column="0"/>
                                    <Grid Grid.Column="1" Background="{Binding DisplayBackgroundColor}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Text="L" Opacity="0"/>
                                    </Grid>

                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!-- PHYSICIAN HEADER -->
            <Grid Grid.Row="5">
                <Label
                Text="Select a Physician"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1"
                />
            </Grid>
            <!-- PHYSICIAN SEARCH BAR -->
            <Grid Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.735*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Text="Patient"/>

                <Button Grid.Column="0" Grid.Row="1" Text="{Binding SortSearchTypePhysician}" Clicked="SortTypeClickedPhysician"/>
                <Button Grid.Column="1" Grid.Row="1" Text="{Binding SortSearchIconPhysician}" Clicked="SortSearchClickedPhysician"/>
                <Entry Grid.Column="2" Grid.Row="1" Text="{Binding QueryPhysician}"/>
                <Button Text="Search" Grid.Row="1" Grid.Column="3" Clicked="SearchClickedPhysician"/>
            </Grid>
             <!-- Physician LIST -->
            <Grid Grid.Row="7">
                <ListView
                ItemsSource="{Binding Physicians}"
                SelectedItem="{Binding SelectedPhysician}"
                HasUnevenRows="False"
                >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="{Binding Model.Display}" Background="{Binding DisplayBackgroundColor}"  Grid.Column="0"/>
                                    <Grid Grid.Column="1" Background="{Binding DisplayBackgroundColor}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Button Text="L" Grid.Column="0" />
                                    </Grid>

                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>

        <Button Text="Ok" Clicked="OkClicked"/>
        <Button Text="Cancel" Clicked="CancelClicked"/>
    </VerticalStackLayout>
</ContentPage>