<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.TheraOffice.Views.AppointmentCloseView"
             Title="AppointmentCloseView"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Label Text="Patient's Name: " />
        <Label Text="{Binding Model.Patient.Name}" />
        <Label Text="Physician's Name: " />
        <Label Text="{Binding Model.Physician.Name}" />
        <Label Text="Date and Time: " />
        <Label Text="{Binding Model.StartTime, StringFormat='{0:MM/dd/yy hh:mm}'}" />

        <Label Text="Diagnoses: " />
        <Entry Text="{Binding Model.Patient.Diagnoses}" />
        <Label Text="Treatments: " />
        <Entry Text="{Binding Model.Patient.Perscriptions}" />


        <Button Text="Ok" Clicked="OkClicked"/>
        <Button Text="Cancel" Clicked="CancelClicked"/>
    </VerticalStackLayout>
</ContentPage>