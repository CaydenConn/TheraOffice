<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.TheraOffice.Views.PatientView"
             Title="PatientView"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Label Text="Patient's Name" />
        <Entry Text="{Binding Model.Name}"/>
        <Label Text="Patient's Race"/>
        <Entry Text="{Binding Model.Race}"/>
        <Label Text="Patient's Gender" />
        <Entry Text="{Binding Model.Gender}"/>
        <Label Text="Patient's Date of Birth"/>
        <DatePicker Date="{Binding Model.Birthday}"/>

        <Label Text="Diagnoses"/>
        <Label Text="{Binding Model.Diagnoses}"/>
        <Label Text="Treatments"/>
        <Label Text="{Binding Model.Perscriptions}"/>

        <Button Text="Ok" Clicked="OkClicked"/>
        <Button Text="Cancel" Clicked="CancelClicked"/>
    </VerticalStackLayout>
</ContentPage>