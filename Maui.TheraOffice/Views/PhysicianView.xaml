<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.TheraOffice.Views.PhysicianView"
             Title="PhysicianView"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Label Text="Physician's Name" />
        <Entry Text="{Binding Model.Name}"/>
        <Label Text="Physician's License Number"/>
        <Entry Text="{Binding Model.LicenseNumber}"/>
        <Label Text="Physician's Specialization" />
        <Entry Text="{Binding Model.Specialization}"/>
        <Label Text="Physician's Date of Graduation"/>
        <DatePicker Date="{Binding Model.GraduationDate}"/>

        <Button Text="Ok" Clicked="OkClicked"/>
        <Button Text="Cancel" Clicked="CancelClicked"/>
    </VerticalStackLayout>
</ContentPage>